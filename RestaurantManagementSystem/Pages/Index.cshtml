@page
@model IndexModel
@{
    ViewData["Title"] = "Welcome to Restaurant Management";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" rel="stylesheet">

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
    }


    .hero-section {
        background: url('https://images.unsplash.com/photo-1528605248644-14dd04022da1?ixlib=rb-4.0.3&auto=format&fit=crop&w=1950&q=80') center center/cover no-repeat;
        height: 100vh;
        display: flex;
        align-items: center;
        color: white;
        text-align: center;
        position: relative;
    }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.4); 
        }

    .hero-content {
        position: relative;
        z-index: 1;
    }

    .hero-text {
        font-size: 3rem;
        font-weight: bold;
    }

    .hero-section .btn {
        padding: 12px 30px;
        font-size: 1.2rem;
        margin-top: 20px;
    }


    .service-card img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-top-left-radius: 0.25rem;
        border-top-right-radius: 0.25rem;
    }

    .service-card {
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        border: none;
        border-radius: 0.25rem;
        transition: transform 0.3s, box-shadow 0.3s;
        background-color: #fff;
    }

        .service-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 12px rgba(0,0,0,0.2);
        }


    .services-section {
        padding: 60px 0;
        background-color: #f8f9fa;
    }

        .services-section h2 {
            font-weight: bold;
            margin-bottom: 40px;
        }


    footer {
        background-color: #343a40;
        color: white;
        padding: 20px 0;
        text-align: center;
    }

        footer a {
            color: white;
            margin: 0 10px;
            font-size: 1.5rem;
        }

            footer a:hover {
                color: #ffc107;
                text-decoration: none;
            }

 
    }
</style>


<div class="hero-section" data-aos="fade-up" data-aos-duration="1500">
    <div class="container hero-content">
        <h1 class="hero-text">Welcome to Our Restaurant</h1>
        <p class="lead">Explore our delicious menu and amazing promotions.</p>
        <a href="/MenuPage" class="btn btn-primary btn-lg mt-3">Start Exploring</a>
    </div>
</div>


<div class="container mt-5" data-aos="fade-up" data-aos-duration="1500">
    <div class="row">

        <div class="col-md-6 mb-4">
            <div class="card service-card">
                <img src="https://images.unsplash.com/photo-1551218808-94e220e084d2?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" class="card-img-top" alt="View Your Orders">
                <div class="card-body">
                    <h5 class="card-title">View Your Orders</h5>
                    <p class="card-text">Track your orders in real-time and manage them easily.</p>
                    <a href="/CustomerOrders" class="btn btn-primary">View Orders</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card service-card">
                <img src="https://images.unsplash.com/photo-1600891964599-f61ba0e24092?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" class="card-img-top" alt="Exclusive Promotions">
                <div class="card-body">
                    <h5 class="card-title">Exclusive Promotions</h5>
                    <p class="card-text">Enjoy our special offers and discounts today!</p>
                    <a href="/PromotionsPage" class="btn btn-warning">View Promotions</a>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="services-section" data-aos="fade-up" data-aos-duration="1500">
    <div class="container">
        <h2 class="text-center mb-5">Our Services</h2>
        <div class="row">

            <div class="col-md-4 mb-4">
                <div class="card service-card">
                    <img src="https://images.unsplash.com/photo-1504754524776-8f4f37790ca0?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" class="card-img-top" alt="Order Online">
                    <div class="card-body">
                        <h4 class="card-title">Order Online</h4>
                        <p class="card-text">Get your food delivered to your doorstep with just a few clicks.</p>
                        <a href="/OrdersPage" class="btn btn-success">Order Now</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card service-card">
                    <img src="https://images.unsplash.com/photo-1551218808-94e220e084d2?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" class="card-img-top" alt="Book a Reservation">
                    <div class="card-body">
                        <h4 class="card-title">Book a Reservation</h4>
                        <p class="card-text">Reserve a table in advance to ensure a seamless dining experience.</p>
                        <a href="/CustomerReservations" class="btn btn-success">Reserve Now</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card service-card">
                    <img src="https://images.unsplash.com/photo-1565299624946-b28f40a0ae38?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" class="card-img-top" alt="Track Promotions">
                    <div class="card-body">
                        <h4 class="card-title">Track Promotions</h4>
                        <p class="card-text">Always be in the loop with our latest special offers and promotions.</p>
                        <a href="/PromotionsPage" class="btn btn-success">Learn More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<footer>
    <div class="container">
        <p>&copy; 2024 Restaurant Management. All Rights Reserved.</p>

        <div class="mt-3">
            <a href="https://facebook.com" target="_blank" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
            <a href="https://twitter.com" target="_blank" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
            <a href="https://instagram.com" target="_blank" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
            <a href="https://linkedin.com" target="_blank" aria-label="LinkedIn"><i class="fab fa-linkedin-in"></i></a>
        </div>
    </div>
</footer>


<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

