@page
@model OrdersPageModel
@{
    ViewData["Title"] = "Manage Orders";
}

<div class="container" data-aos="fade-up" data-aos-duration="1000">
    <h1 class="text-center mb-4 text-white">Manage Orders</h1>
    <table class="table table-striped table-hover bg-white shadow">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Customer</th>
                <th>Total Amount</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Orders)
            {
                <tr>
                    <td>@order.OrderID</td>
                    <td>@order.CustomerName</td>
                    <td>$@order.TotalAmount</td>
                    <td>@order.Status</td>
                    <td>
                        <button class="btn btn-sm btn-success">Mark Completed</button>
                        <button class="btn btn-sm btn-danger">Cancel</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
