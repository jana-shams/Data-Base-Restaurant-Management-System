@page
@model ServerDashboardModel
@{
    ViewData["Title"] = "Server Dashboard";
}

<div class="container" data-aos="fade-up" data-aos-duration="1000">
    <h1 class="text-center mb-4 text-white">Server Dashboard</h1>
    <h3 class="text-white">Active Orders</h3>
    <table class="table table-striped table-hover bg-white shadow">
        <thead>
            <tr>
                <th>Order ID</th>
                @*<th>Customer</th>*@
                <th>Menu Item</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Orders)
            {
                <tr>
                    <td>@order.OrderID</td>
                    @*<td>@order.CustomerName</td>*@
                    <td>@order.MenuItem</td>
                    <td>@order.Status</td>
                    <td>
                        <button class="btn btn-sm btn-success">Mark Served</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>