@page
@model SecurityDashboardModel
@{
    ViewData["Title"] = "Security Dashboard";
}

<div class="container" data-aos="fade-up" data-aos-duration="1000">
    <h1 class="text-center mb-4 text-white">Security Dashboard</h1>
    <h3 class="text-white">Incident Logs</h3>
    <table class="table table-striped table-hover bg-white shadow">
        <thead>
            <tr>
                <th>Incident ID</th>
                <th>Description</th>
                <th>Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var incident in Model.Incidents)
            {
                <tr>
                    <td>@incident.IncidentID</td>
                    <td>@incident.Description</td>
                    <td>@incident.Date.ToShortDateString()</td>
                    <td>@incident.Status</td>
                </tr>
            }
        </tbody>
    </table>
</div>
