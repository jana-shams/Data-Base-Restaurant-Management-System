@page
@model ReservationsPageModel
@{
    ViewData["Title"] = "Manage Reservations";
}

<div class="container" data-aos="fade-up" data-aos-duration="1000">
    <h1 class="text-center mb-4 text-white">Manage Reservations</h1>
    <table class="table table-striped table-hover bg-white shadow">
        <thead>
            <tr>
                <th>Reservation ID</th>
                <th>Customer</th>
                <th>Date</th>
                <th>Number of People</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reservation in Model.Reservations)
            {
                <tr>
                    <td>@reservation.ReservationID</td>
                    <td>@reservation.CustomerName</td>
                    <td>@reservation.ReservationDate.ToShortDateString()</td>
                    <td>@reservation.NumberOfPeople</td>
                    <td>
                        <button class="btn btn-sm btn-danger">Cancel</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
